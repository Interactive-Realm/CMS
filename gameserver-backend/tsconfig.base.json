{
  "compilerOptions": {
    "baseUrl": ".",                         // Needed for path aliases
    "paths": {
      "@shared/*": ["shared/src/*"]         // Define the alias
    },
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
