{
  "compilerOptions": {
    "baseUrl": ".",                        
    "paths": {
      "@shared/*": ["shared/src/*"]        
    },
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "jest.config.*"
  ]
}
